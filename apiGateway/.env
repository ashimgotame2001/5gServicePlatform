# API Gateway Environment Variables
# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# JWT Configuration
# IMPORTANT: JWT_SECRET must match auth-service JWT_SECRET exactly
JWT_SECRET=smart-5g-platform-jwt-secret-key-min-256-bits-for-production-security-change-this
# JWK Set URI pointing to auth service
JWT_JWK_SET_URI=http://localhost:8085/.well-known/jwks.json

# Service URLs
CONNECTIVITY_SERVICE_URL=http://localhost:8081
IDENTIFICATION_SERVICE_URL=http://localhost:8082
LOCATION_SERVICE_URL=http://localhost:8083
DEVICE_MANAGEMENT_SERVICE_URL=http://localhost:8084
AUTH_SERVICE_URL=http://localhost:8085

# OAuth2 Configuration
OAUTH2_ISSUER_URI=http://localhost:8085
